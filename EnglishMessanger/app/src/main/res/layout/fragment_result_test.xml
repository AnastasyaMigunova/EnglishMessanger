<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".presentation.onboarding.testing.ResultTestFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/start_text"
        android:gravity="center"
        android:text="@string/congratulations"
        android:textSize="36sp"
        android:fontFamily="@font/alice_regular"
        android:layout_marginTop="180dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewResultTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/start_text"
        android:textSize="40sp"
        android:fontFamily="@font/alice_regular"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="B1"/>

    <ImageView
        android:id="@+id/imageViewCheck"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_check"
        app:layout_constraintTop_toBottomOf="@id/textViewResultTest"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonGetStarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/let_s_go"
        android:paddingVertical="18dp"
        android:layout_marginTop="64dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/background"
        android:backgroundTint="@color/start_text"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/imageViewCheck"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>